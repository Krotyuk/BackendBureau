package ftc.shift.sample.api;
import ftc.shift.sample.models.Task;
import org.json.*;


public class Taker {
    public Task takeTask(String taskJ) {


        JSONObject obj = new JSONObject(taskJ);

        String user_name = obj.getJSONObject("data").getString("user_name");
        String title = obj.getJSONObject("data").getString("title");
        String description = obj.getJSONObject("data").getString("short_description");
        String short_description = obj.getJSONObject("data").getString("description");
        String date = obj.getJSONObject("data").getString("date");


        String[] arrTask={user_name,title,description,short_description,date};
        Task task = new Task();
        task.setUser_name(arrTask[0]);
        task.setTitle(arrTask[1]);
        task.setDescription(arrTask[2]);
        task.setShort_description(arrTask[3]);
        task.setDate(arrTask[4]);
        return task;
    }
}
